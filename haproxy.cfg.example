global
    daemon
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy

    # SSL Configuration
    ssl-default-bind-ciphers ECDHE+AESGCM:ECDHE+CHACHA20:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS
    ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms
    option httplog
    option dontlognull
    option http-server-close
    option forwardfor except 127.0.0.0/8
    option redispatch
    retries 3

# Stats interface
frontend stats
    bind *:8404
    stats enable
    stats uri /stats
    stats refresh 30s
    stats admin if TRUE
    # Prometheus metrics endpoint
    http-request use-service prometheus-exporter if { path /stats/prometheus }

# HTTP frontend (redirect to HTTPS)
frontend http_frontend
    bind *:80
    redirect scheme https code 301

# HTTPS frontend
frontend https_frontend
    bind *:443 ssl crt-list /etc/ssl/certs/cert-list.txt
    
    # Add security headers
    http-response set-header Strict-Transport-Security "max-age=31536000; includeSubDomains"
    http-response set-header X-Frame-Options "SAMEORIGIN"
    http-response set-header X-Content-Type-Options "nosniff"
    
    # Route to backend
    default_backend web_servers

# Backend servers
backend web_servers
    balance roundrobin
    option httpchk GET /health
    
    # Example backend servers
    server web1 192.168.1.10:8080 check
    server web2 192.168.1.11:8080 check

# Certificate list file format (create /etc/ssl/certs/cert-list.txt):
# /app/certs/example_com.pem
# /app/certs/api_example_com.pem
